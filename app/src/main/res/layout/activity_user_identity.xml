<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_layout_ooo"/>
    <!--请输入真实姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_standard_input"
        android:layout_marginTop="20dp"
        android:background="@drawable/bottom_border_standard">
        <EditText
            android:hint="请输入真实姓名"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textColorHint="@color/font_light"
            android:textSize="16sp"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <!--请输入18位身份证号码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_standard_input"
        android:background="@drawable/bottom_border_standard">
        <EditText
            android:hint="请输入18位身份证号码"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textColorHint="@color/font_light"
            android:textSize="16sp"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <!--文字上传身份证照片-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="请上传身份证照片"/>
    <!--参考图片&上传-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <!--参考照片-->
        <ImageView
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:src="@drawable/identy" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_radius_verify"
        android:gravity="center">
        <TextView
            android:text="确认提交"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/button_standard"/>
    </LinearLayout>

</LinearLayout>
